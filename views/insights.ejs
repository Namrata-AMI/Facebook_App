<%- layout("boilerplate.ejs") %>

    <title>facebook_app</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            margin: 20px 0;
        }
        .cards-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 200px;
            padding: 20px;
            text-align: center;
        }
        .card h3 {
            margin: 0 0 10px 0;
            font-size: 18px;
        }
        .card p {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Page Insights</h1>
    <div class="cards-container">
        <div class="card">
            <h3>Total Followers</h3>
            <p><%= insights.followers %></p>
        </div>
        <div class="card">
            <h3>Total Engagement</h3>
            <p><%= insights.engagement %></p>
        </div>
        <div class="card">
            <h3>Total Impressions</h3>
            <p><%= insights.impressions %></p>
        </div>
        <div class="card">
            <h3>Total Reactions</h3>
            <p><%= insights.reactions %></p>
        </div>
    </div>
</body>
</html>
